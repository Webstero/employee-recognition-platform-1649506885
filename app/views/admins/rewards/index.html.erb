<h1>Rewards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Creation time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.id %></td>
        <td><%= reward.title %></td>
        <td><%= reward.description %></td>
        <td><%= reward.price %></td>
        <td><%= reward.created_at %></td>
        <td><%= link_to 'Show', admins_reward_path(reward), class: "btn btn-dark" %></td>
        <td><%= link_to 'Edit', edit_admins_reward_path(reward), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', admins_reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Reward', new_admins_reward_path, class: "btn btn-primary" %>



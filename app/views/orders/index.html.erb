
<h1>My orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date of order:</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%F") %></td>
        <td><%= order.bought_reward.title %></td>
        <td><%= order.bought_reward.description %></td>
        <td><%= order.bought_reward.price %></td>
        <td><%= link_to 'Show', order, class: "btn btn-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>




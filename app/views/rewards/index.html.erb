<h1>Rewards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Creation time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.id %></td>
        <td><%= reward.title %></td>
        <td><%= reward.price %></td>
        <td><%= reward.created_at.strftime("%F") %></td>
        <td><%= link_to 'Show', reward_path(reward), class: "btn btn-dark" %></td>
        <td><%= link_to "Buy", orders_path(order: {:reward_id => reward.id}), method: :post, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  %>
      </tr>
    <% end %>
  </tbody>
</table>

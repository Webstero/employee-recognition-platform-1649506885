<%= form_with(model: kudo) do |form| %>
  <% if kudo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kudo.errors.count, "error") %> prohibited this kudo from being saved:</h2>

      <ul>
        <% kudo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :receiver_id %>
      <%= form.collection_select :receiver_id, @available_employees, :id, :email, {}, {class: "form-control"}%>
    </div>

    <div class="form-group">
      <%= form.label :company_value %>
      <%= form.collection_select :company_value_id, @company_values, :id, :title, {}, {class: "form-control"} %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %> 
    </div>
    <br>
  </div>
<% end %>


<h1>Kudos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th>CompanyValue</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email%></td>
        <td><%= kudo.company_value.title %></td>
        <td><%= link_to 'Show', kudo %></td>
          <% if kudo.giver_id == current_employee.id %>
            <td><%= link_to 'Edit', edit_kudo_path(kudo) %></td>
            <td><%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_employee.number_of_available_kudos != 0 %>
<%= link_to 'New Kudo', new_kudo_path %>
<% end %>


